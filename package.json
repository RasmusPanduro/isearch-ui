{
  "name": "isearch-ui",
  "version": "1.0.0",
  "description": "UI for Inspirational Search",
  "main": "src/app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run lint && npm run coverage",
    "dev:build": "webpack --progress",
    "dev:serve": "webpack-dev-server --hot --inline",
    "lint": "semistandard",
    "nocov": "npm run lint && mocha index.test.js --compilers js:babel-register",
    "coverage": "./node_modules/.bin/babel-node ./node_modules/.bin/babel-istanbul cover ./node_modules/.bin/_mocha index.test.js --report lcovonly -- -R spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/numo-labs/isearch-ui.git"
  },
  "keywords": [
    "React",
    "UI",
    "Search",
    "Grid"
  ],
  "author": "Nikki Ravi & Jack Carlisle",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/numo-labs/isearch-ui/issues"
  },
  "homepage": "https://github.com/numo-labs/isearch-ui#readme",
  "devDependencies": {
    "expect": "^1.14.0",
    "jsdom": "^8.1.0",
    "mocha": "^2.4.5",
    "mocha-jsdom": "^1.1.0",
    "react": "^0.14.7",
    "react-addons-test-utils": "^0.14.7",
    "react-hot-loader": "^1.3.0",
    "semistandard": "^7.0.5",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "semistandard" : {
    "globals": [
      "describe",
      "it"
    ]
  }
}
